define read
    x/1x $arg0
end

define write
    set {int}$arg0 = $arg1
    read $arg0
end

define read_SYSMEMREMAP
    read 0x40048000
end

define write_SYSMEMREMAP
    write 0x40048000 = $arg0
    read_SYSMEMREMAP
end

define memmap
    read_SYSMEMREMAP
end

define memmap_bootloader
    write_SYSMEMREMAP 0
end

define memmap_sram
    write_SYSMEMREMAP 1
end

define memmap_flash
    write_SYSMEMREMAP 2
end

define flash_erase
    monitor flash erase_sector 0 0 31
end

define flash_check
    monitor flash erase_check 0
end

define flash_load
    monitor flash write_image erase firmware.bin
end

define reset
    monitor reset
end

define halt
    monitor halt
end

define reload
    halt
    file firmware.elf
    flash_load
    reset
end

layout split
target remote localhost:3333
halt
